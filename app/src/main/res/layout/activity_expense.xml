<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".AddExpenseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white_stroke"
                android:elevation="2dp"
                android:orientation="vertical"
                android:padding="25dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Expense"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount (R)"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />

                <EditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_normal"
                    android:hint="0.00"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />

                <GridLayout
                    android:id="@+id/categoryGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:id="@+id/categoryFood"
                        style="@style/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸ”" />
                        <TextView style="@style/CategoryText" android:text="Food" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categoryTransport"
                        style="@style/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸš—" />
                        <TextView style="@style/CategoryText" android:text="Transport" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categoryShopping"
                        style="@style/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸ›ï¸" />
                        <TextView style="@style/CategoryText" android:text="Shopping" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categoryEntertainment"
                        style="@styles/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸŽ¬" />
                        <TextView style="@style/CategoryText" android:text="Entertainment" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categoryBills"
                        style="@style/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸ’¡" />
                        <TextView style="@style/CategoryText" android:text="Bills" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/categoryHealthcare"
                        style="@style/CategoryButton"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp">
                        <TextView style="@style/CategoryEmoji" android:text="ðŸ¥" />
                        <TextView style="@style/CategoryText" android:text="Healthcare" />
                    </LinearLayout>
                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_edittext_normal"
                    android:hint="e.g., Lunch with friends"
                    android:gravity="top"
                    android:inputType="textCapSentences|textMultiLine"
                    android:padding="12dp"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="14dp" />
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext_normal"
                    android:hint="Select date"
                    android:padding="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="32dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_edittext_normal"
                        android:padding="12dp"
                        android:layout_marginEnd="6dp"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnSaveExpense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/bg_button_black_rounded"
                        android:padding="12dp"
                        android:layout_marginStart="6dp"
                        android:clickable="true"
                        android:focusable="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Expense"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>