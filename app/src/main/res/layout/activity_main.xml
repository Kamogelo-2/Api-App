<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background ="#FFFFFF"
    android:padding="16dp">

    <!-- Container for the form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/lr270ebebebffffff"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Card-like inner container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/se0e0e0sw1cr12bffffff"
            android:elevation="2dp"
            android:padding="24dp">

            <!-- Icon Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cr9999b000000"
                android:paddingVertical="12dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/rjoju2oxc1wg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/r30ie8bdr1wq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Create Account"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="6dp"/>

            <!-- Subtitle -->
            <TextView
                android:id="@+id/rld7qsh1w83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Start tracking your expenses today"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="28dp"/>

            <!-- Name Input -->
            <TextView
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/rexjdtm7wfn"
                android:hint="John Doe"
                android:inputType="text"
                android:background="@drawable/sf0f0f0sw1cr10bffffff"
                android:textColor="#999999"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <!-- Email Input -->
            <TextView
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/r3epmfq5p4ff"
                android:hint="john@example.com"
                android:inputType="text"
                android:background="@drawable/sf0f0f0sw1cr10be8f0fe"
                android:textColor="#999999"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <!-- Password Input -->
            <TextView
                android:text="Password"
                android:textColor="#000000"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/rkg8jmw7x9c"
                android:hint="••••••••"
                android:inputType="textPassword"
                android:background="@drawable/sf0f0f0sw1cr10be8f0fe"
                android:textColor="#999999"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Sign Up Button -->
            <LinearLayout
                android:id="@+id/rgq8ctldlx98"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cr10b000000"
                android:padding="10dp"
                android:orientation="vertical"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_marginBottom="24dp">
                <TextView
                    android:text="Sign Up"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Divider -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:orientation="vertical"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:text="Or"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Google Sign In -->
            <LinearLayout
                android:id="@+id/rj24jlwe744a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/sf0f0f0sw1cr10bffffff"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="18dp">

                <ImageView
                    android:id="@+id/rrfs1ttoz7nc"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="8dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"/>
                <TextView
                    android:text="Sign in with Google"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Sign In Prompt -->
            <TextView
                android:text="Already have an account? Sign In"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

