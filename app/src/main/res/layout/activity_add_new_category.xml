<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AddNewCategoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_white_stroke"
                android:padding="24dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:text="Add New Category"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etCategoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_edittext_normal"
                    android:hint="e.g., Groceries"
                    android:inputType="textCapWords"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <TextView
                    android:text="Icon (Emoji)"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etCategoryIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_edittext_normal"
                    android:hint="e.g., ðŸ›’"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Min Goal (R)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Max Goal (R)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/etMinGoal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_edittext_normal"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etMaxGoal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edittext_normal"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnAddCategory"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:gravity="center"
                    android:background="@drawable/bg_button_black_rounded"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:text="Add Category"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="4dp"
        android:gravity="center_vertical|space-around">

        <TextView
            android:id="@+id/btnNavAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="#666666"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnNavReports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textColor="#666666"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnNavSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="#666666"
            android:textSize="12sp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>