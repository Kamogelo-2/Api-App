<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Settings Header -->
            <TextView
                android:id="@+id/rf84t0qfvhy"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Profile Card -->
            <LinearLayout
                android:id="@+id/rlonlb16fxk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingVertical="25dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/r6vmthigxxxx"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/r87vonlw5n5w"
                        android:text="Profile"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/r3lvlnsubeas"
                    android:text="Name"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/rsg1n1xsqxl8"
                    android:text="kamo"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/r4eqa6hjp0la"
                    android:text="Email"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/rsy4eiosgsk"
                    android:text="scitwipitjeng@gmail.com"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Logout Button -->
                <LinearLayout
                    android:id="@+id/rb9lg685izw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/cr10b333333"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="25dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/rmdeqhphey3i"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/r4iozeg1av7n"
                        android:text="Logout"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Preferences Card -->
            <LinearLayout
                android:id="@+id/rjvy2rbe2ix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingVertical="25dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/ri56n0gmriha"
                    android:text="Preferences"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Dark Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Dark Mode"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/s00000000sw2cr9999bf0f0f0"
                        android:paddingVertical="2dp">
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/cr9999bffffff"
                            android:layout_marginStart="2dp"
                            android:elevation="2dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Language -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Language"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="128dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:background="@drawable/sf0f0f0sw1cr10bffffff"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:text="English"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginStart="14dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="13dp"
                            android:src="@mipmap/ic_launcher"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Push Notifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:text="Enable Push Notifications"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="44dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/s00000000sw2cr9999bf0f0f0"
                        android:paddingVertical="2dp">
                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/cr9999bffffff"
                            android:layout_marginStart="2dp"
                            android:elevation="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Sticky Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center_vertical|space-around"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:text="Home"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <TextView
            android:text="Add"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <TextView
            android:text="Reports"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <TextView
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
