<?xml version="1.0" encoding="utf-8">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/rfpgxahak3e"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingVertical="24dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/r33gb28pxf5"
                    android:text="Add New Category"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/r4izsq1leybr"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/rmnhgqhoamjs"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/sf0f0f0sw1cr10bffffff"
                    android:orientation="vertical"/>

                <TextView
                    android:id="@+id/rwedpm22rzia"
                    android:text="Icon (Emoji)"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/rqxj3zgwqnh"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/sf0f0f0sw1cr10bffffff"
                    android:orientation="vertical"/>

                <LinearLayout
                    android:id="@+id/rjupn663c79d"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/rv3o6rcvitoe"
                        android:text="Min Goal (R)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/r4tqq7qon59q"
                        android:text="Max Goal (R)"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r4lmc57nn00g"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/r0c686vzgxjce"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/sf0f0f0sw1cr10bffffff"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:id="@+id/r20ibfa2mpd2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:background="@drawable/sf0f0f0sw1cr10bffffff"
                        android:orientation="vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rpllzw23pd4j"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:background="@drawable/cr10b000000"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/r2v4e2jmwh9b"
                        android:text="Add Category"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Sticky Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="4dp"
        android:gravity="center_vertical|space-around">

        <TextView
            android:text="Add"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:text="Reports"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:text="Settings"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
