<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/rfmn2wo4cykh"
                    android:text="Reports"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/r6cafogaxoqm"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:background="@drawable/sf0f0f0sw1cr10bffffff"
                    android:paddingVertical="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rsb1lur6djks"
                        android:text="Month"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginStart="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/ru3nxc7i5ize"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="13dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitXY"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Spending by Category -->
            <LinearLayout
                android:id="@+id/rat8lfczspkq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingTop="25dp"
                android:paddingBottom="305dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rp6nuxqwldn"
                    android:text="Spending by Category"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <!-- Budget Performance -->
            <LinearLayout
                android:id="@+id/rj4n3wfwjxzo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingTop="25dp"
                android:paddingBottom="305dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r20uu4z9ps39"
                    android:text="Budget Performance (Past 30 Days)"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <!-- Expense Distribution -->
            <LinearLayout
                android:id="@+id/rye3aon4kmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingTop="25dp"
                android:paddingBottom="305dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/r4jdbiiylfgw"
                    android:text="Expense Distribution"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>

            <!-- Summary -->
            <LinearLayout
                android:id="@+id/rg7pvrp7vsq8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se0e0e0sw1cr12bffffff"
                android:paddingVertical="25dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rgfbse30krx"
                    android:text="Summary"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:text="R 4500.00"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="25dp">

                    <TextView
                        android:text="R 1500.00"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="3"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Sticky Bottom Navigation Bar -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="12dp"
        android:elevation="4dp"
        android:gravity="center_vertical|space-around">

        <TextView
            android:text="Home"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <TextView
            android:text="Add"
            android:textColor="#666666"
            android:textSize="12sp"/>

        <TextView
            android:text="Reports"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:text="Settings"
            android:textColor="#666666"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>
